{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "src": "/", "dest": "/public/index.html" },
    { "src": "/upload", "dest": "/public/upload.html" },
    { "src": "/history", "dest": "/public/history.html" },

    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
